{
  "manifest_version": 3,
  "name": "Browser MCP Extension",
  "version": "1.0.0",
  "description": "Chrome extension for browser MCP integration",
  "permissions": [
    "tabs",
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "http://localhost/*",
    "ws://localhost/*"
  ],
  "background": {
    "service_worker": "dist/background/index.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content/index.js"]
    }
  ],
  "action": {
    "default_popup": "dist/popup.html",
    "default_title": "Browser MCP"
  }
}